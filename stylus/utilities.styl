// Utilities
gris-claro = #c9c9c9
gris-oscuro = #3A3A3A
rosa = #F0ADA0
rosa-oscuro = #d86256
rosa-claro = #ffe5e0

.container
	max-width 900px
	margin 0 auto


.PaddingContainer
	padding 3em 0

.border
	border-bottom 1px solid gris-claro

.center
	text-align center

.center-block
	margin 0 auto

.left
	float left

.right
	float right

.top
	vertical-align: top



html
	font-size 16px

body
	color gris-oscuro

h1,h2,h3,h4,h5,h6
	font-family 'Lobster'
	color rosa
	margin-bottom 0

h2
	font-size 2.5em

h3
	font-size 1.9em

a
	color rosa-oscuro
	text-decoration none
	&:hover
		color rosa
		text-decoration underline

